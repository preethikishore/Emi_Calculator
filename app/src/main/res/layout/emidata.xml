<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/cardView_bg_color"
    style="@style/style_cardView">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">


        <TextView
            android:id="@+id/recyclerPeriod"
            style="@style/style_recycler_data_textview" />

        <TextView
            android:id="@+id/recyclerPrinciplePaid"
            style="@style/style_recycler_data_textview" />

        <TextView
            android:id="@+id/recyclerinterestCalc"
            style="@style/style_recycler_data_textview" />

        <TextView
            android:id="@+id/recyclerprincipleRemains"
            style="@style/style_recycler_data_textview" />
    </LinearLayout>

</androidx.cardview.widget.CardView>