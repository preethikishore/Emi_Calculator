<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/cardView_bg_color"
    style="@style/style_cardView">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
      >

        <TextView
            android:id="@+id/rdRecyclerInputAmount"
            style="@style/style_recycler_data_textview"
            android:layout_width="30dp"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/rdRecyclerInterestAmount"
            style="@style/style_recycler_data_textview"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/rdRecyclerCapitlizedInterest"
            style="@style/style_recycler_data_textview"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/rdRecyclerInterestBalance"
            style="@style/style_recycler_data_textview"
            android:textColor="#FFFFFF" />



    </LinearLayout>

</androidx.cardview.widget.CardView>