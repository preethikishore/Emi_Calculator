<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/page_color</item>
        <item name="colorPrimaryDark">@color/white_text_color</item>
        <item name="colorAccent">#03DAC5</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="stylebutton">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="stylespacewidth">
        <item name="android:layout_width">@dimen/space_width</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="stylespaceheight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/space_height</item>
    </style>

    <style name="style_emi_textview">
        <item name="android:layout_width">@dimen/emi_layout_text_width</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/emi_text_margin</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:textColor">@color/white_text_color</item>
        <item name="android:textSize">@dimen/emi_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_color</item>
        <item name="android:layout_marginTop">2dp</item>


    </style>

    <style name="style_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bg_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding"> @dimen/button_padding</item>

    </style>

    <style name="style_emi_inner_linear_horizontal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="style_button_linear_horizontal">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">3</item>

    </style>

    <style name="style_emi_details_table_row">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_text</item>
        <item name="android:layout_marginLeft">@dimen/table_margin_left</item>
        <item name="android:layout_marginRight">@dimen/table_margin_right</item>
        <item name="android:layout_marginTop">@dimen/table_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/table_margin_bottom</item>


    </style>

    <style name="style_emi_detail_textview">
        <item name="android:layout_column">0</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="style_emi_detail_main_head_textview">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textColor">@color/linear_verical_background</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_column">0</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/head_text_size</item>
    </style>

    <style name="style_sub_heading">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">@dimen/layout_vertical_margin</item>
        <item name="android:layout_marginRight">@dimen/layout_vertical_margin</item>
        <item name="android:background">#00BCD4</item>
        <item name="android:weightSum">4</item>
    </style>

    <style name="style_recycler_view_textview">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:textColor">@color/white_text_color</item>
        <item name="android:textSize">@dimen/recycler_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_recyler_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/layout_vertical_margin</item>
        <item name="android:layout_marginRight">@dimen/layout_vertical_margin</item>
        <item name="android:background">@drawable/bg_text</item>
        <item name="android:padding">@dimen/recycler_padding</item>
    </style>

    <style name="style_recycler_data_textview">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:textSize">@dimen/recycler_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white_text_color</item>

    </style>

    <style name="style_cardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/cardview_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bg_text</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/cardView_padding</item>
    </style>

    <style name="style_emi_detail_heading">
        <item name="android:textSize">@dimen/head_text_size</item>
        <item name="android:layout_margin">@dimen/text_padding</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:textColor">@color/white_text_color</item>
    </style>

    <style name="style_LinearLayout_Vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/layout_vertical_margin</item>
        <item name="android:layout_marginTop">@dimen/emi_page_layout_top_margin</item>
        <item name="android:layout_marginEnd">@dimen/layout_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/layout_vertical_margin</item>
        <item name="android:background">@drawable/bg_text</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/emi_page_layout_vertical_padding</item>
    </style>

    <style name="style_loan_textView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/loan_text_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:textColor">@color/white_text_color</item>
        <item name="android:textSize">@dimen/head_text_size</item>
    </style>

    <style name="style_loan_comaprison_inner_horizontal">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:weightSum">2</item>
        <item name="android:layout_margin">@dimen/layout_vertical_margin</item>
    </style>

    <style name="style_text_head">
        <item name="android:textSize">@dimen/head_text_size</item>
        <item name="android:layout_margin">@dimen/text_padding</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_loan_inner_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">3dp</item>
        <item name="android:textColor">@color/white_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="style_loan_inner_difference_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">3dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bg_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/linear_verical_background</item>

    </style>

    <style name="style_default_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:gravity">start</item>
        <item name="android:inputType">number|numberDecimal</item>
        <item name="android:textColor">@color/white_text_color</item>
        <item name="android:hint">@string/hint_default_value</item>
    </style>


    <style name="style_loan_heading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/bg_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/page_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <dimen name="loan_text_margin">3dp</dimen>
    <dimen name="defaulttextsize">12sp</dimen>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="style_pageViewer_textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/emi_text_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/page_color</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:textColor">@color/white_text_color</item>
    </style>


    <style name="style_pageViewer_result_textView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/emi_text_margin</item>
        <item name="android:background">@color/page_color</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:textColor">@color/white_text_color</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>

    </style>



    <style name="style_pagerview_linear_vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:weightSum">2</item>
    </style>



    <style name="style_interest_calculator_inner_horizontal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="style_pageViewer_hinttextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/emi_text_margin</item>
        <item name="android:background">@color/page_color</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:textColor">@color/white_text_color</item>
        <item name="android:textSize">@dimen/compulsory_text_size</item>


    </style>

    <style name="style_date_picker">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/datepicker_height</item>
        <item name="android:calendarViewShown">false</item>
        <item name="android:datePickerMode">spinner</item>
        <item name="android:headerBackground">@color/page_color</item>
    </style>

    <style name="style_radio_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/radio_button_text_size</item>
        <item name="android:textColor">@color/white_text_color</item>
        <item name="android:background">@color/page_color</item>
    </style>

    <style name="style_loan_comparison_inner_vertical" parent="style_sub_heading">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="style_homepage_horizontal">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/linear_horizontal_height</item>
        <item name="android:background">#00BCD4</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:weightSum">3</item>
    </style>

    <style name="style_emi_horizontal__inner_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/layout_vertical_margin</item>
        <item name="android:layout_marginEnd">@dimen/layout_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/layout_vertical_margin</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/emi_page_layout_vertical_padding</item>
    </style>

    <style name="emi_layout_textView">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:textColor">@color/white_text_color</item>
        <item name="android:textSize">@dimen/default_textSize </item>
    </style>
    <style name="spinnerTheme">
        <item name="android:textColor">@color/white_text_color</item>
        <item name="android:textSize">@dimen/defaulttextsize</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:popupBackground">@color/page_color</item>

    </style>
</resources>
